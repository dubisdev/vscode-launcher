{
  "name": "vscode-app-launcher",
  "displayName": "App Launcher",
  "description": "Launch your system apps from VS Code",
  "version": "0.0.0-development",
  "publisher": "dubisdev",
  "repository": {
    "type": "git",
    "url": "https://github.com/dubisdev/vscode-launcher.git"
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.launchApp",
    "onCommand:extension.launchDefaultApp"
  ],
  "main": "./dist/extension.js",
  "icon": "icon.png",
  "license": "MIT",
  "contributes": {
    "commands": [
      {
        "command": "extension.launchApp",
        "title": "Launch App"
      },
      {
        "command": "extension.launchDefaultApp",
        "title": "Todoist Open [Project]"
      }
    ],
    "keybindings": [
      {
        "command": "extension.launchApp",
        "key": "alt+l l"
      },
      {
        "command": "extension.launchDefaultApp",
        "key": "alt+l d"
      }
    ],
    "configuration": [
      {
        "title": "App Launcher",
        "properties": {
          "launcher.defaultApp": {
            "type": "string",
            "default": null,
            "description": "The default app to launch when no app is specified in the command",
            "scope": "window"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js",
    "release": "semantic-release",
    "commit": "cz",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.20.50",
    "@types/vscode": "1.66.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "fetch-installed-software": "^0.0.7",
    "glob": "^7.1.6",
    "installed-sw": "1.0.1",
    "mocha": "^7.1.1",
    "semantic-release": "19.0.2",
    "semantic-release-vsce": "^5.0.11",
    "typescript": "^3.9.10",
    "vscode-test": "^1.3.0"
  },
  "resolutions": {
    "minimist": "^1.2.6"
  },
  "release": {
    "branches": [
      {
        "name": "main"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "semantic-release-vsce",
        {
          "packageVsix": true
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "*.vsix",
              "label": "vscode-launcher"
            }
          ]
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
